pipeline
{
    agent any
    stages
    {
      stage('scm checkout')
      {
          steps {

              git branch: 'master', url: 'https://github.com/prakashk0301/maven-project'
          }
      }

      stage('sonar and maven package')
      {
           steps{

               withSonarQubeEnv('sonar') {
                   withMaven(jdk: 'localjdk-1.8', maven: 'localmaven')
                   {

                       sh 'clean mvn install sonar:sonar'
                   }
           }
           }

      }


    }
}
